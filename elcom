setTimeout(function(){ let prem1 = document.getElementById("sign-modal"); let prem2= document.getElementById("signwall-app"); if(prem1 == null){ prem2.style.opacity="0"; prem2.style.transition=".7s ease-in-out"; document.getElementsByTagName("html")[0].style.overflow="scroll"; setTimeout(function(){ prem2.style.display='none'; },730); } else{ prem1.style.opacity="0"; prem1.style.transition=".7s ease-in-out"; document.getElementsByTagName("html")[0].style.overflow="scroll"; document.getElementById("contenedor").style.cssText = "display: block; opacity: 1; visibility: inherit"; setTimeout(function(){ prem1.style.display='none'; document.getElementsByClassName('story-content__content')[0].style.userSelect='auto'; },730); } },2000); 
